{
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "paths": {
    "@/*": ["./src/*"],
    "@test/*": ["./test/*"]
  }
}
